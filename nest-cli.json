{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
       {
        "include": "mail/templates/**/*",
        "outDir": "dist"
      }
    ],
    "deleteOutDir": true,
    "typeCheck": true,
    "watchAssets": true,
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": ".swcrc"
      }
    }
  }
}
